root = true

[*]

charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 120

[*.{py}]
indent_size = 4

[*.{cs}]
indent_size = 4

[*.{css,scss}]
indent_size = 4

[*.{cmd,bat}]
indent_size = 4
end_of_line = crlf